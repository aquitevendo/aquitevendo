body
	font-family: sans-serif, arial;
	padding-top 1px

header
	.logo
		width 100px
		vertical-align top
	a.brand
		font-weight bold
		font-size 30px
		span
			line-height 100px
			color #333

.background-one
	background url(../images/fondo1.jpg)
	background-size 100%
	height 467px

#busquedas
	max-width 850px
	margin 100px auto auto auto
	overflow hidden
	.filter,
	.button
		width 30%
		display inline-block
	.filter
		background white
		height 50px
		padding-left 34px
		position relative
		.fa
			position absolute
			left 8px
			top 15px
			color gray
			font-size 20px
		input[type=text]
			border none
			padding 5px
			font-size 18px
			margin 0
			height 50px
			box-sizing border-box
			-moz-box-sizing border-box
			&:hover,
			&:active,
			&:focus,
			&:focus:not([readonly])
				border none
				box-shadow none
	.button
		button
			width 100%
			height 50px