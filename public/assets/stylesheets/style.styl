body
	//font-family roboto, sans-serif, arial;
	padding-top 1px
	background-color #EEE

header
	background-color white
	.logo
		width 100px
		vertical-align top
	a.brand
		font-weight bold
		font-size 30px
		span
			line-height 100px
			color #333

.background-one
	background url(../images/fondo1.jpg)
	background-size 100%
	height 467px

#busquedas
	max-width 850px
	margin 100px auto auto auto
	overflow hidden
	.filter,
	.button
		width 30%
		display inline-block
		vertical-align top
	.filter
		background white
		height 50px
		padding-left 34px
		position relative
		.fa
			position absolute
			left 8px
			top 15px
			color gray
			font-size 20px
		input[type=text]
			border none
			padding 5px
			font-size 18px
			margin 0
			height 50px
			box-sizing border-box
			-moz-box-sizing border-box
			&:hover,
			&:active,
			&:focus,
			&:focus:not([readonly])
				border none
				box-shadow none
	.button
		button
			width 100%
			height 50px

$verde_agua = #03876D
$gris = #4E575D

#categories	
	background-color white
	padding 15px
	border-radius: 3px;
	box-shadow: 0px 1px 1px rgba(180, 180, 180, 0.5);
	.category
		margin-bottom 40px
		.head
			.icon
				width 60px
				height 60px
				border-radius 6px
				line-height 60px
				background-color $verde_agua
				text-align center
				color white
				font-size 25px
				display inline-block
				vertical-align top
			.title
				display inline-block
				vertical-align top
				.name
					font-size 20px
					font-weight bold
					color $verde_agua
				.counter
					color $gris
		.content
			li
				line-height 30px
				a
					color $gris
					
#aside
	.content
		background-color white
		margin-bottom 26px
		border-radius: 3px;
		box-shadow: 0px 1px 1px rgba(180, 180, 180, 0.5);
		h4
			font-size 25px
		
#pop-categories
	padding 10px
	li
		border-bottom 1px solid #ebebeb
		background url(../images/arrow-right.png) no-repeat
		background-position 0px 18px
		padding-left 15px
		a
			color $gris
			line-height 42px
			&:hover
				text-decoration underline
